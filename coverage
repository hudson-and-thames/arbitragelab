#!/bin/bash

echo "----Running Code Coverage----"

# Remove multiprocessing coverage files in case a previous combine wasn't performed
rm -fR cover/
# Remove the main coverage file (.coverage)
. venv/bin/activate
coverage erase

# Discover and run all tests, check unit tests results
. venv/bin/activate
coverage run --concurrency=multiprocessing -m pytest tests/
res_test=$?
if [ $res_test -ne 0 ]
then
  echo -e "Build FAILURE: Unit tests failed"
  exit 1
fi

# Check coverage results
. venv/bin/activate
coverage combine
res_combine=$?
if [ $res_combine -ne 0 ]
then
  echo -e "Build FAILURE: Coverage combine failed"
  exit 1
fi

. venv/bin/activate
coverage report --fail-under=100
coverage_report=$?
if [ $coverage_report -ne 0 ]
then
  echo -e "Build FAILURE: Coverage percentage failed"
  exit 1
fi
